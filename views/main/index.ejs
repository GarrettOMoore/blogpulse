<h1> BlogPulse. </h1>
<nav>
<a href="/authors">Show All Authors!</a> |
<a href="/authors/new">Add a New Author!</a> |
<a href="/posts/new">Add a New Post!</a> 
</nav>
<main class="main-body">
<% posts.forEach(function(post) {%>
    <div class="well">
        <h2 class="articles"> 
            <a href="/posts/<%= post.id %>"><%= post.title %></a>
            <p class="by-author">By: <%=post.author.name%></p>
            
        </h2>
    </div>
<% }); %>
</main>

